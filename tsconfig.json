{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "allowJs": true,
    // "outDir": "./dist",
    "removeComments": false,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "*": ["./node_modules/@types/*", "./node_modules/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "jest.config.js"],
  "include": ["./src/**/*.ts"]
}
